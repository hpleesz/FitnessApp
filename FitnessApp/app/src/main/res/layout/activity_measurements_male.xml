<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="80dp"
        android:paddingBottom="16dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/measurementsMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/measurements_male" />

    <TextView
        android:id="@+id/shoulderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text="@string/measurements_filler" />

        <TextView
            android:id="@+id/waistTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="195dp"
            android:text="@string/measurements_filler" />

        <TextView
            android:id="@+id/chestTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="165dp"
            android:text="@string/measurements_filler" />

        <TextView
            android:id="@+id/rightUpperArmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="156dp"
            android:layout_marginStart="30dp"
            android:text="@string/measurements_filler" />

        <TextView
            android:id="@+id/rightForearmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:layout_marginStart="30dp"
            android:text="@string/measurements_filler" />

        <TextView
            android:id="@+id/leftUpperArmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="156dp"
            android:layout_marginEnd="30dp"
            android:text="@string/measurements_filler" />

        <TextView
            android:id="@+id/leftForearmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="30dp"
            android:text="@string/measurements_filler" />

    <TextView
        android:id="@+id/hipsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="260dp"
        android:text="@string/measurements_filler" />

    <TextView
        android:id="@+id/leftThighTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_marginEnd="50dp"
        android:text="@string/measurements_filler" />

    <TextView
        android:id="@+id/leftCalfTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="50dp"
        android:text="@string/measurements_filler" />

    <TextView
        android:id="@+id/rightThighTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_marginStart="50dp"
        android:text="@string/measurements_filler" />

    <TextView
        android:id="@+id/rightCalfTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="50dp"
        android:text="@string/measurements_filler" />

    </RelativeLayout>