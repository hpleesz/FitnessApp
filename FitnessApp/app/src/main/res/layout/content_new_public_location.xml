<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:scrollbarThumbVertical="@drawable/scrollbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:paddingTop="80dp"
            android:text="@string/name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/LocationNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Description"
            android:textColor="@android:color/black"

            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/LocationDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Country"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/LocationCountryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="City"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/LocationCityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Zip"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/LocationZipEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Address"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/LocationAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Hours"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mon"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tues"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Wed"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thurs"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fri"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sat"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sun"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/MonStart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/TuesStart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/WedStart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/ThursStart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/FriStart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/SatStart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/SunStart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/MonEnd"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/TuesEnd"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/WedEnd"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/ThursEnd"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/FriEnd"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/SatEnd"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>
            <EditText
                android:id="@+id/SunEnd"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:textSize="12sp"
                android:inputType="time"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_marginTop="16dip"
            android:text="@string/available_equipment"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
        <include layout="@layout/recyclerview_equipment" />
    </LinearLayout>
    </LinearLayout>

</ScrollView>
